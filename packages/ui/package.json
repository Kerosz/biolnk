{
  "name": "@biolnk/ui",
  "version": "0.9.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build:css": "npx tailwindcss -o ./dist/tailwind.css --minify",
    "build": "tsdx build && yarn build:css",
    "build:win": "set NODE_ENV=production && yarn build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17",
    "tailwindcss": ">=3"
  },
  "size-limit": [
    {
      "path": "dist/ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@radix-ui/react-avatar": "^0.1.3",
    "react-feather": "^2.0.9"
  },
  "devDependencies": {
    "@biolnk/config": "*",
    "@biolnk/utils": "*",
    "@headlessui/react": "^1.4.2",
    "@size-limit/preset-small-lib": "^7.0.3",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.4",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^7.0.4",
    "tailwindcss": "^3.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.3"
  }
}
