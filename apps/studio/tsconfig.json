{
  "extends": "@biolnk/config/ts/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~components/*": ["./src/components/*"],
      "~assets/*": ["./src/assets/*"],
      "~layout/*": ["src/components/layouts/*"]
